<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_collared"
    tools:context="com.example.vladimirsostaric.block05.MainActivity">


    <RadioGroup
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/green_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/red_radio"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Green" />

        <RadioButton
            android:id="@+id/blue_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/red_radio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/red_radio"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="Blue" />

        <RadioButton
            android:id="@+id/red_radio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/green_radio"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/green_radio"
            android:layout_below="@+id/blue_radio"
            android:layout_marginTop="18dp"
            android:text="Red" />

    </RadioGroup>

</RelativeLayout>
